<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.EditText" />

    <style name="Widget.EditText.Sing" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="Widget.EditText.Sing.Domain" >
        <item name="android:drawableStart">@drawable/ic_domain_black_24dp</item>
        <item name="android:hint">@string/service_name</item>
    </style>

    <style name="Widget.EditText.Sing.Login" >
        <item name="android:drawableStart">@drawable/ic_person_black_24dp</item>
        <item name="android:hint">@string/user_name</item>
    </style>

    <style name="Widget.EditText.Sing.Password" >
        <item name="android:drawableStart">@drawable/ic_https_black_24dp</item>
        <item name="android:hint">@string/password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Widget.TextInputLayout.Password" >
        <item name="passwordToggleEnabled">true</item>
    </style>

</resources>