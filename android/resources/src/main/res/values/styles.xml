<resources>

    <style name="Widget" />

    <style name="Widget.Button" parent="Widget.AppCompat.Button" >
        <item name="android:backgroundTint">?colorPrimary</item>
    </style>

    <style name="Widget.Crypton.Toolbar.PrimarySurface" parent="Widget.Crypton.Toolbar.Primary" />

    <style name="Widget.Crypton.Toolbar.Surface" parent="Widget.MaterialComponents.Toolbar.Surface" >
        <item name="android:elevation">1dp</item>
    </style>

    <style name="Widget.Crypton.Toolbar.Primary" parent="Widget.MaterialComponents.Toolbar.Primary" />

    <style name="Widget.Avatar" />

    <style name="Widget.Avatar.Letter">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">@dimen/avatar_letter_size</item>
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:background">@drawable/no_avatar_drawable</item>
    </style>

</resources>
