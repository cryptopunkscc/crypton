<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manageAccounts"
    app:startDestination="@id/accountListFragment">

    <fragment
        android:id="@+id/accountListFragment"
        android:name="cc.cryptopunks.crypton.account.presentation.fragment.AccountListFragment"
        android:label="AccountListFragment"
        tools:layout="@layout/account_list">
        <action
            android:id="@id/navigateSetAccount"
            app:destination="@id/setAccountNavigation" />
    </fragment>

    <include app:graph="@navigation/set_account" />

    <action
        android:id="@+id/navigateAccountList"
        app:destination="@id/accountListFragment"
        app:popUpTo="@id/manageAccounts"
        app:popUpToInclusive="true" />
</navigation>